<table class='table table-striped table-hover'>
    <caption>Категории</caption>
    <thead>
    <tr>
        <th>ID</th>
        <th>Название</th>
        <th>Затраты</th>
        <th>Дата</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each categories as |item|}}
        <tr>
            <td>{{item.id}}</td>
            <td>
              {{#link-to 'categories' item.id}}
                {{item.name}}
              {{/link-to}}
            </td>
            <td>{{item.cost}}</td>
            <td>{{formatDate item.date}}</td>
            <td class='actions-column'>
                <a href='#' class='btn btn-sm btn-danger' {{action 'precessRemove' item}}>Удалить</a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
